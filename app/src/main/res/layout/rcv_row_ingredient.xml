<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_back"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/rv_cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/rv_back_1"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/rv_ingredient"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="top|start|center_vertical"
                android:lines="2"
                android:text="Nudelsuppe"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/rv_indicator"
                android:layout_width="10dp"
                android:layout_height="0dp"
                android:background="@color/cardview_today"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/rv_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="end|top"
                android:lines="2"
                android:text="1"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/rv_amountof"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/rv_amountof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center|top|center_vertical"
                android:lines="2"
                android:text="x"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/rv_ingredient"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/rcv_ind_btn1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="@color/cardview_today"
                android:drawableStart="@drawable/ic_baseline_add_shopping_cart_24"
                android:foregroundGravity="center"
                android:gravity="center"
                android:padding="12dp"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/rcv_ind_btn3"
                app:layout_constraintTop_toTopOf="@+id/rcv_ind_btn2"
                tools:visibility="visible" />

            <Button
                android:id="@+id/rcv_ind_btn2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/colorPrimary"
                android:drawableStart="@drawable/ic_baseline_thumb_up_24"
                android:foregroundGravity="center"
                android:gravity="center"
                android:padding="12dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/rcv_ind_btn1"
                app:layout_constraintTop_toBottomOf="@+id/rv_ingredient"
                tools:visibility="visible" />

            <Button
                android:id="@+id/rcv_ind_btn3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:background="@color/red"
                android:drawableStart="@drawable/ic_baseline_thumb_down_alt_24"
                android:foregroundGravity="center"
                android:gravity="center"
                android:padding="12dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/rcv_ind_btn1"
                tools:visibility="visible" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>